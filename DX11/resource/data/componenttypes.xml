<attribute name="hp" type="int"/>
<attribute name="posX" type="float"/>
<attribute name="posY" type="float"/>
<attribute name="velX" type="float"/>
<attribute name="velY" type="float"/>
<!-- Component Attributes -->
<attribute name="playerNumber" type="int"/>
<attribute name="layer" type="int"/>
<attribute name="shader" type="string"/>
<attribute name="texture" type="string"/>
<attribute name="offsetX" type="int"/>
<attribute name="offsetY" type="int"/>
<attribute name="topDownCollide" type="bool"/>
<attribute name="mouseNumber" type="int"/>
</attributeTypes>