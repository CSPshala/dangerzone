	<message name="entity_dirty" value="2" />
	<message name="entity_resize" value="3" />
</messageTypes>

<!-- valid components and their pre-registered local messages -->
<validComponents>
	<component typeName="player_controller" type="0">
	</component>
	<component typeName="rendering" type="1" >
	</component>
	<component typeName="rect_collision" type="2" >
		<messages name="entity_dirty"/>
	</component>
	<component typeName="mouse_controller" type="3" >
	</component>
	<component typeName="circle_collision" type="4" >
	</component>
	<component typeName="point_collision" type="5" >
