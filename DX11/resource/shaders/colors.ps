//////////////
// TYPEDEFS //
//////////////
struct ColorPixelInputType
{
    float4 position : SV_POSITION;
    float3 color : COLOR;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 ColorPixelShader(ColorPixelInputType input) : SV_TARGET
{
    return float4(input.color, 1.0);
}